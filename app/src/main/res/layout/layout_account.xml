<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frangmentaccount"
    android:orientation="vertical"
    android:background="#6AA6C8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:background="#6AA6C8"
        android:id="@+id/imgexit"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_local_florist_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFFF"
            android:text="Flower Corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="#FFFF"
                android:text="TÊN TÀI KHOẢN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edtaccount"
                app:errorEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:textColorHint="#FFFF"
                   android:hint="Email"
                   android:inputType="textEmailAddress"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#FFFF"
                android:text="MẬT KHẨU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/edtpassword"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#FFFF"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
           <Button
               android:background="@drawable/custom_btndangnhap"
               android:layout_marginRight="15dp"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="10dp"
               android:text="ĐĂNG NHẬP"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#FFFF"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="HOẶC KẾT NỐI VỚI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnface"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btnfacebook"
                    android:text="FACEBOOK"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btngg"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btngg"
                    android:text="GOOGLE"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>